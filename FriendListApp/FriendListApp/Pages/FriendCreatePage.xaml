<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendListApp.Pages.FriendCreatePage">
  

<StackLayout Orientation="Vertical">
  <TableView>
         <TableRoot>
            <TableSection>
             <EntryCell Label="Name: " x:Name="Name"></EntryCell>
             <EntryCell Label="Lacation: " x:Name="Location"></EntryCell>
             <EntryCell Label="Address: " x:Name="Address"></EntryCell>
             <EntryCell Label="Favorite Food: " x:Name="Favorite"></EntryCell>
             <EntryCell Label="PhoneNumber: " x:Name="PhoneNumber"></EntryCell>               
           </TableSection>
         </TableRoot>
       </TableView>  
<Button Text="Save" Clicked="Button_Save"></Button>
</StackLayout>
</ContentPage>