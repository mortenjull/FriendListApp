<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FriendListApp"
             x:Class="FriendListApp.MainPage">

  <StackLayout Orientation="Vertical">
    <Label Text="Friends"></Label>
    <ListView  x:Name="FriendList" RowHeight="60">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>            
            <StackLayout VerticalOptions="CenterAndExpand" Orientation="Horizontal" Spacing="10">  
              <Image x:Name="FriendImage"></Image>
              <StackLayout Orientation="Vertical">
                <Label x:Name="FriendName"></Label>
                <Label x:Name="FriandLocation"></Label>
              </StackLayout>             
            </StackLayout>            
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
      <Button x:Name="FriendAdd" Text="Add a Friend" TextColor="White" BackgroundColor="Blue" BorderRadius="5px"></Button>
    </StackLayout>
  </StackLayout>
</ContentPage>